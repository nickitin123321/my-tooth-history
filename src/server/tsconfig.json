{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "lib": ["es2020", "es2019", "es2017", "es2015", "dom"],
    "noUnusedLocals": true,
    "esModuleInterop": true,
  },
  "include": [
      "*"
  ]
}